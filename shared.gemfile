group :production do
  gem 'rails_12factor'
end

gem 'test_after_commit', group: :test
gem 'jquery-turbolinks'
gem 'turbolinks'
gem 'rails_email_preview', '>= 1.0.2'

if ENV['TRAVIS']
  gem 'codeclimate-test-reporter', group: :test, require: false
end

group :debug do
  gem 'derailed'
  gem 'pry-rails'
  gem 'rack-mini-profiler'

  platform :mri do
    gem 'byebug'
    gem 'flamegraph'
    gem 'stackprof'
  end
end
